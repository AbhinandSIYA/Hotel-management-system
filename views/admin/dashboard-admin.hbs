<div class="admin">


    <div class="sidenav">
        <a href="/dashboard-admin" class="active" >Dashboard</a>
        <a href="/payment-admin">Payment</a>
        <a href="/createRoom-admin">Create Room</a>

        <a href=""> <div class="navbtn">
            <img src="/images/user-2.png" class="userimg" alt="">
            <div class="d-flex justify-content-center">
                <label for="">ADMIN</label>
            </div>
            <a href=""><button class="bttn btn btn-danger" type="button">Log Out</button></a>
        </div>
        </a>

        <div class="">
            <a href=""><button class="bttn btn btn-success" type="button">New User</button></a>
        </div>
    </div>


    <div class="dashboard">


        <div class="container">

            <h3 class="theadtitle text-success">Available Rooms</h3>

            <div class="tabdiv">
                <table class="table table-dark table-striped  table-responsive">
                    <thead>
                    <tr>
                        <th>Room No</th>
                        <th>Persons</th>
                        <th>AC/Non-AC</th>
                        <th>Rent</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
            {{#each room}}
                    <tr>
                        <td>{{this.roomno}}</td>
                        <td>{{this.persons}}</td>
                        <td>{{this.ac}}</td>
                        <td>{{this.rent}}</td>
                        <td><form action="/customer">
                            <input class="hiddenid" type="text" style="visibility: hidden" name="id" value="{{this._id}}">
                            <input type="submit" class="btn btn-warning" value="Check In">
                        </form></td>
                    </tr>
                    {{/each}}

                    </tbody>
                </table>

            </div>

        </div>


        <div class="container ">

            <h3 class="theadtitle text-danger">Closed Rooms</h3>

            <div class="tabdiv">
                <table class="table table-dark table-striped">


                    <thead>
                    <tr>
                        <th>Room No</th>
                        <th>Name</th>
                        <th>Persons</th>
                        <th>AC/Non-AC</th>
                        <th>Rent</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each croom}}
                        <tr>
                            <td>{{this.roomno}}</td>
                            <td>{{this.cstname}}</td>
                            <td>{{this.persons}}</td>
                            <td>{{this.ac}}</td>
                            <td>{{this.rent}}</td>
                            <td><form action="/payment-admin">
                                <input class="hiddenid" type="text" style="visibility: hidden" name="id" value="{{this._id}}">
                                <input type="submit" class="btn btn-warning" value="Check Out" >
                            </form></td>
                            <td><a href="/customer"><button type="button" class="btn btn-warning">Confirm</button></a></td>
                        </tr>
                    {{/each}}


                    </tbody>
                </table>

            </div>

        </div>

    </div>

</div>

